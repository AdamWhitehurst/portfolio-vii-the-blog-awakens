{
  "env": {
    "browser": true,
    "jest": true,
    "es6": true
  },
  "plugins": ["prettier"],
  "extends": ["nextjs", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@styles", "./styles/"],
          ["@components", "./components/"],
          ["@layouts", "./layouts/"],
          ["@lib", "./lib/"],
          ["@hooks", "./hooks/"],
          ["@fonts", "./fonts/"]
        ],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
